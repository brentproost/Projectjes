<navigation:Page x:Class="WebApp.Views.Settings" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="Settings Page">
    <Grid x:Name="LayoutRoot">
        <StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="Meldingsuur"/>
                <TextBox HorizontalAlignment="Left" Margin="5 0 0 0" MinWidth="50" VerticalAlignment="Top"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Button Content="Submit" HorizontalAlignment="Left"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</navigation:Page>
